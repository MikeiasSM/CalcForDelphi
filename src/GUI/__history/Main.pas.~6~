{$R *.dfm}

procedure TMainForm.GetDigito(LNumero: String);
begin
  if (lblDisplay.Text.Equals('0')) then
  begin
    lblDisplay.Text := LNumero;
  end
  else
  begin
    if ((LNumero.Contains(',')) and (lblDisplay.Text.Contains(','))) then
    begin
    end
    else
    begin
      lblDisplay.Text := lblDisplay.Text + Lnumero;
    end;
  end;
end;

end.
