{$R *.dfm}

procedure TPrincipal.GetDigito(LDigito: String);
begin
  if (lblDisplay.Text.Equals('0')) then
  begin
    lblDisplay.Text := LNumero;
  end
  else
  begin
    if ((LDigito.Contains(',')) and (lblDisplay.Text.Contains(','))) then
    begin
    end
    else
    begin
      lblDisplay.Text := lblDisplay.Text + LDigito;
    end;
  end;
end;

end.
