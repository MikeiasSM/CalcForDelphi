  Vcl.Controls;

type
  TPrincipal = class(TForm)
    lblDisplay: TLabel;
    pnPrincipal: TPanel;
    pnDisplay: TPanel;
    Panel1: TPanel;
    GridPanel1: TGridPanel;
    btnNumSete: TButton;
